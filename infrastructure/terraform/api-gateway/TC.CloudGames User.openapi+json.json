            "TCCloudGamesUsersApplicationUseCasesCreateUserCreateUserCommand": {
                "required": [
                    "name",
                    "email",
                    "username",
                    "password",
                    "role"
                ],
                "type": "object",
                "properties": {
                    "name": {
                        "maxLength": 100,
                        "minLength": 3,
                        "pattern": "^[a-zA-Z ]+$",
                        "type": "string",
                        "example": "John Smith"
                    },
                    "email": {
                        "minLength": 1,
                        "pattern": "^[^@]+@[^@]+$",
                        "type": "string",
                        "format": "email",
                        "example": "john.smith@gmail.com"
                    },
                    "username": {
                        "maxLength": 100,
                        "minLength": 3,
                        "pattern": "^[a-zA-Z][a-zA-Z0-9]*$",
                        "type": "string",
                        "example": "john.smith"
                    },
                    "password": {
                        "minLength": 8,
                        "pattern": "[\\W_]",
                        "type": "string",
                        "example": "******"
                    },
                    "role": {
                        "minLength": 1,
                        "type": "string",
                        "example": "Admin"

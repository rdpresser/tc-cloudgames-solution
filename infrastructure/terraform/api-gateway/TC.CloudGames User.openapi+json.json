        "/by-email/{email}": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Retrieve user details by their email.",
                "description": "This endpoint retrieves detailed information about a user by their Email. Access is restricted to users with the appropriate role.",
                "operationId": "GetUserByEmailEndpoint",
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "John.smith@gmail.com"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returned when user information is successfully retrieved.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/TCCloudGamesUsersApplicationUseCasesGetUserByEmailUserByEmailResponse"
                                },
                                "example": {
                                    "id": "019b3aff-e8a7-447d-a511-334847d768cb",
                                    "name": "John Smith",
                                    "username": "johnsmith",
                                    "email": "John.smith@gmail.com",
                                    "role": "Admin"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Returned when the request is invalid.",
                        "content": {
                            "application/problem+json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FastEndpointsProblemDetails"
                                },
                                "example": {
                                    "type": "https://www.rfc-editor.org/rfc/rfc7231#section-6.5.1",
                                    "title": "One or more validation errors occurred.",
                                    "status": 400,
                                    "instance": "/api/route",
                                    "traceId": "0HMPNHL0JHL76:00000001",
                                    "detail": "string",
                                    "errors": [
                                        {
                                            "name": "Error or field name",
                                            "reason": "Error reason",
                                            "code": "string",
                                            "severity": "string"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Returned when the request is made without a valid user token."
                    },
                    "403": {
                        "description": "Returned when the caller lacks the required role to access this endpoint."
                    },
                    "404": {
                        "description": "Returned when no user is found with the provided Id."
                    }
                }
            }
        },

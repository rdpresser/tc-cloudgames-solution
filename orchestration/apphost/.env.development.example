# ============================================
# TC CloudGames - Development Environment Variables
# ============================================
# Este arquivo define variï¿½veis de ambiente para desenvolvimento local
# Prioridade: .env files > appsettings.Development.json > appsettings.json


# ============================================
# DATABASE CONFIGURATION
# ============================================
USE_EXTERNAL_DATABASE=false
DB_CONTAINER_NAME=TC-CloudGames-Postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERS_NAME=tc-cloudgames-users-db
DB_GAMES_NAME=tc-cloudgames-games-db
DB_PAYMENTS_NAME=tc-cloudgames-payments-db
DB_MAINTENANCE_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public
DB_CONNECTION_TIMEOUT=30


# ============================================
# CACHE CONFIGURATION (Redis)
# ============================================
USE_EXTERNAL_CACHE=false
CACHE_CONTAINER_NAME=TC-CloudGames-Redis
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=Redis@123
CACHE_INSTANCE_NAME=TC.CloudGames.Users.Api:
CACHE_SECURE=false


# ============================================
# MESSAGE BROKER CONFIGURATION (RabbitMq)
# ============================================
MESSAGE_BROKER_TYPE=RabbitMQ
#----------------------------
USE_EXTERNAL_RABBITMQ=false
RABBITMQ_CONTAINER_NAME=TC-CloudGames-RabbitMq
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_VHOST=/
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=user.events
RABBITMQ_AUTO_PROVISION=true
RABBITMQ_DURABLE=true
RABBITMQ_USE_QUORUM_QUEUES=true
RABBITMQ_AUTO_PURGE_ON_STARTUP=true


# ============================================
# GRAFANA CONFIGURATION (OTEL)
# ============================================
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic token
GRAFANA_API_TOKEN=glc token
GRAFANA_PROMETHEUS_TOKEN=glc token
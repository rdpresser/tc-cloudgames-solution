# ============================================
# TC CloudGames - Production Environment Variables
# ============================================
# Este arquivo define vari�veis de ambiente para produ��o
# Prioridade: .env files > appsettings.Production.json > appsettings.json


# ============================================
# DATABASE CONFIGURATION
# ============================================
USE_EXTERNAL_DATABASE=true
DB_HOST=<prod-db-host>
DB_PORT=5432
DB_USERS_NAME=tc-cloudgames-users-db
DB_GAMES_NAME=tc-cloudgames-games-db
DB_PAYMENTS_NAME=tc-cloudgames-payments-db
DB_MAINTENANCE_NAME=postgres
DB_USER=<prod-db-user>
DB_PASSWORD=<prod-db-password>
DB_SCHEMA=public
DB_CONNECTION_TIMEOUT=30


# ============================================
# MESSAGE BROKER CONFIGURATION (Azure Service Bus)
# ============================================
# Para produção usamos Azure Service Bus em vez de RabbitMQ
USE_EXTERNAL_AZURESERVICEBUS=true
MESSAGE_BROKER_TYPE=AzureServiceBus
AZURE_SERVICEBUS_CONNECTIONSTRING=Endpoint=sb://<namespace>.servicebus.windows.net/;SharedAccessKeyName=<key-name>;SharedAccessKey=<key-value>
AZURE_SERVICEBUS_TOPIC_NAME=user.events
AZURE_SERVICEBUS_AUTO_PROVISION=true
AZURE_SERVICEBUS_MAX_DELIVERY_COUNT=10
AZURE_SERVICEBUS_ENABLE_DEAD_LETTERING=true
AZURE_SERVICEBUS_AUTO_PURGE_ON_STARTUP=true
AZURE_SERVICEBUS_USE_CONTROL_QUEUES=true


# ============================================
# CACHE CONFIGURATION (Redis)
# ============================================
USE_EXTERNAL_CACHE=true
CACHE_HOST=<prod-cache-host>
CACHE_PORT=6380
CACHE_PASSWORD=<prod-cache-password>
CACHE_INSTANCE_NAME=TC.CloudGames.Users.Api:
CACHE_SECURE=true


# ============================================
# GRAFANA CONFIGURATION (OTEL)
# ============================================
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic token
GRAFANA_API_TOKEN=glc token
GRAFANA_PROMETHEUS_TOKEN=glc token